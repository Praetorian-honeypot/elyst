<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textViewWThreeTitleOne"
        android:layout_below="@id/toolbar"
        android:text="Almost done.."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewWThreeFooterOne"
        android:text="Let's review a few tweaks\nAll these can be changed in settings"
        android:layout_below="@id/textViewWThreeTitleOne"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="#9c9c9c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewWThreeCategoryOne"
        android:text="Sort method"
        android:layout_below="@id/textViewWThreeFooterOne"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/radioGroupSort"
        android:layout_width="wrap_content"
        android:layout_below="@id/textViewWThreeCategoryOne"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alphabetical sort"
            android:checked="true"
            android:id="@+id/radioButtonAlphabetical"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category sort"
            android:id="@+id/radioButtonCategory"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textViewWThreeCategoryTwo"
        android:text="Miscellaneous"
        android:layout_below="@id/radioGroupSort"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWThreeCategoryTwo"
        android:text="Enable barcode scanner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/checkBoxWThreeBarcode"
        android:layout_centerVertical="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxWThreeBarcode"
        android:text="Enable vibrations"
        android:checked="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/checkBoxWThreeVibration"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/imageButtonFabWThree"
        android:layout_width="@dimen/fab_button_diameter"
        android:layout_height="@dimen/fab_button_diameter"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fab_shape"
        android:src="@mipmap/fab_ic_done"
        android:tint="@android:color/white"/>



</RelativeLayout>
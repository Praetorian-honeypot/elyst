<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_avatar"/>

    <TextView
        android:id="@+id/textViewWTwoTitleOne"
        android:text="The story"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_below="@id/imageViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewWTwoFooterOne"
        android:text="As I was tired of these poor designed shopping list apps, I've decided to create a better one myself. Enjoy the result !"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewWTwoTitleOne"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="#9c9c9c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewWTwoTitleTwo"
        android:text="About me"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewWTwoFooterOne"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewWTwoFooterTwo"
        android:text="I'm a young computer science student who like doing cool stuff with Android.\n\nFeel free to contact me and if you like my app, help me in my studies by buying the pro version."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewWTwoTitleTwo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="#9c9c9c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/imageButtonFabWTwo"
        android:layout_width="@dimen/fab_button_diameter"
        android:layout_height="@dimen/fab_button_diameter"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fab_shape"
        android:src="@mipmap/fab_ic_forward"
        android:tint="@android:color/white"/>

</RelativeLayout>